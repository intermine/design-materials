@import url('http://fonts.googleapis.com/css?family=Droid+Sans:400,800')

// ------------------------------------------

gradient(a, b)
    background: a
    background: -moz-linear-gradient(top, a 0%, b 100%)
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,a), color-stop(100%,b))
    background: -webkit-linear-gradient(top, a 0%, b 100%)
    background: -o-linear-gradient(top, a 0%, b 100%)
    background: -ms-linear-gradient(top, a 0%, b 100%)
    background: linear-gradient(to bottom, a 0%, b 100%)

corners(a)
    -webkit-border-radius: a
    -moz-border-radius: a
    border-radius: a

shadow(a, b)
    -webkit-box-shadow: a b
    -moz-box-shadow: a b
    box-shadow: a b

// ------------------------------------------

ul
    list-style-type: none

    li
        display: inline-block

h1
    margin: 0

p
    font-size: 15px

nav#mini
    ul
        margin: 3px 0

        li
            &:not(:last-child)
                margin-right: 12px

            a
                color: #BBB
                font-size: 13px
                padding: 6px
                display: block

                &.padlock
                    background: url('../img/padlock.png') no-repeat 0 7px
                    padding-left: 16px

#hero
    background: #829B02 url('../img/pattern-1.jpg') repeat 0 0
    border: 1px solid #596A02
    border-width: 1px 0
    margin-bottom: 10px

    &:after
        content: ""
        display: block
        width: 100%
        height: 10px
        gradient rgba(0,0,0,0), rgba(0,0,0,0.05)

    #logo
        background: url('../img/logo.png') no-repeat 0 0
        width: 321px
        height: 42px
        margin: 40px 0

    h1
        font-family: Calibri, "Droid Sans"
        text-transform: uppercase
        color: #FFF
        font-weight: 400
        font-size: 34px
        line-height: 44px
        margin: 10px 0

    nav#main
        ul
            height: 42px
            line-height: 42px
            margin: 40px 0

            li
                &:not(:last-child)
                    margin-right: 24px

                a
                    color: #FFF
                    text-transform: uppercase
                    font-size: 14.5px
                    font-weight: 800
                    text-shadow: 1px 1px 1px rgba(0,0,0,.45)
                    padding: 6px

    p.important
        color: #F2FBC3
        font-size: 14.5px

    .links
        margin: 20px 0 30px 0

        &:after
            content: ""
            display: block
            clear: both

        a.git
            background: url('../img/download.png') no-repeat 0 0
            width: 184px
            height: 68px
            display: block
            text-indent: -9999px
            white-space: nowrap
            overflow: hidden

        a.started
            display: block
            text-transform: uppercase
            font-weight: 800
            color: #FFF
            font-size: 17px
            background: url('../img/play.png') no-repeat 0 0
            padding-left: 40px
            height: 32px
            line-height: 32px
            margin: 16px 0 16px 40px

    hr
