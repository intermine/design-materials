        background: url('../img/divider.png') repeat-x 0 0
        border: 0
        margin: 15px // reduce the width by the columns padding
    
    .browser
        background: url('../img/browser.png') no-repeat 0 0
        width: 391px
        height: 272px
        position: relative
        margin-left: -12px // shift by the width of the left dropshadow

        span
            position: absolute
            top: 22px
            left: 76px
            font-size: 10px
            color: #999

        img
            position: absolute
            top: 43px
            left: 12px
            width: 360px
            height: 208px

    #klout
        a.more
