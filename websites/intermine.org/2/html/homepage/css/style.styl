article
    margin: 30px 0

    &.white
        h1
            font-family: Calibri, "Droid Sans"
            text-transform: uppercase
            color: #827E7F
            font-weight: 400
            font-size: 21px
            margin-bottom: 25px

        p
            color: #827E7F

        a
            color: #6B7F01
            border-bottom: 1px solid #6B7F01

            &.more
                gradient #f9f9f9, #f6f6f6
                corners 5px
                shadow 0px 1px 2px 0px, rgba(0,0,0,.1)
                border: 1px solid #E0DDDD
                padding: 9px 17px
                color: #999
                font-size: 15px
                text-shadow: 1px 1px 0px #FFF

        ul li
            color: #827E7F
            display: block

    &.gray
        h1
            font-family: Calibri, "Droid Sans"
            text-transform: uppercase
            color: #FFF
            font-weight: 400
            font-size: 21px
            text-align: center
            margin-bottom: 15px

        span.sub
            display: block
            text-align: center
            color: #9FABA3
            margin-bottom: 14px

        img
            float: left
            margin: 0 20px 0 0

        p
            color: #FFF

        a
            color: #FFF
            border-bottom: 1px solid #FFF

            &.more
                gradient #636C67, #676F6B
                corners 5px
                shadow 0px 1px 2px 0px, rgba(0,0,0,.15)
                border: 1px solid #747876
                padding: 9px 17px
                color: #FFF
                font-size: 15px
                text-shadow: 1px 1px 0px rgba(0,0,0,.3)


.quote
    margin: 0 0 30px 0

    p
        color: #827E7F
        margin: 0 0 0 30px

    blockquote
        font-family: Calibri, "Droid Sans"
        border: 0
        color: #595455
        font-size: 20px
        font-weight: 800
        letter-spacing: 1px
        padding: 0 30px
        position: relative
        display: inline-block

        &:before, &:after
            font-size: 40px
            position: absolute
            top: -12px
            font-family: "Times New Roman", serif

        &:before
            content: '“'
            left: 0
        
        &:after
            content: '”'
            right: 0

    a
        color: #6B7F01
        border-bottom: 1px solid #6B7F01

#dirt
    background: url('../img/pattern-2.jpg') repeat 0 0
    border-bottom: 1px solid #353A37

footer
